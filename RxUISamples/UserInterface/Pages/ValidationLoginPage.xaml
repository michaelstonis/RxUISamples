<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:vm="clr-namespace:RxUISamples.ViewModels;assembly=RxUISamples"
    x:TypeArguments="vm:ValidationLoginViewModel"
    x:Class="RxUISamples.UserInterface.Pages.ValidationLoginPage">
    <ScrollView>
        <StackLayout Padding="8">
            <Image 
                Aspect="AspectFit"
                Source="rxui_logo.png"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <Entry x:Name="username" Placeholder="Username" />
            <Label x:Name="usernameValidation" />
            <Entry x:Name="password" Placeholder="password" />
            <Label x:Name="passwordValidation" />
            <Button x:Name="login" Text="Login" />
        </StackLayout>
    </ScrollView>
</rxui:ReactiveContentPage>
